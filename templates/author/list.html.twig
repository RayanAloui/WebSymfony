<html> 
  <head>
       <title>List Authors</title>
       <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 20px;
                background-color: #f4f4f4;
            }

            table {
                width: 100%;
                border-collapse: collapse;
                margin: 20px 0;
                background-color: #fff;
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

            th, td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            th {
                background-color: #5C6BC0;
                color: white;
            }

            tr:hover {
                background-color: #f1f1f1;
            }

            img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
            }

            a {
                color: #3949AB;
                text-decoration: none;
            }

            a:hover {
                text-decoration: underline;
            }

            h1 {
                margin-top: 20px;
                font-size: 24px;
                color: #333;
                text-align: center;
            }

            .container {
                max-width: 1200px;
                margin: 0 auto;
            }

            .table-container {
                overflow-x: auto;
            }
       </style>
  </head>
  <body>
    <div class="container">
        <div class="table-container">
            {% set total_books= 0 %}
            {% if list is defined and list is not empty %}
                <table>
                    <tr>
                       <th>Name</th>
                       <th>Image</th>
                       <th>Number Of Books</th>
                       <th>Details</th>
                    </tr>

                    {% for author in list %}
                    <tr>
                       {% set total_books= total_books + author.nbrBooks %}
                       <td> {{ author.authorName|upper }} </td>
                       <td> <img src="{{ asset(author.picture) }}" alt="{{ author.authorName }}"></td>
                       <td> {{ author.nbrBooks }} </td>
                       <td><a href="{{ path('app_author_details', {'id': author.id}) }}">Details</a></td>
                    </tr>
                    {% endfor %}
                </table>
                <h1>The number of authors: {{ list|length }}, the number of books: {{ total_books }}</h1>
            {% else %}
                <h1>This table is not defined or empty</h1>
            {% endif %}
        </div>
    </div>
  </body>
</html>
